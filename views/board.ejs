<script>
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const name = urlParams.get("name");
    $(document).ready(function () {
        getPosts();
    });
    function getPosts() {
        $("#postList").empty();
        $.ajax({
            type: "GET",
            url: `/api/board`,
            data: {},
            success: function (response) {
                let write = response;
                for (let i = 0; i < write.length; i++) {
                    maketb(write[i]);
                }
            }
        });
    }
    function maketb(list) {
        let tempHtml = `<tr>
                            <th scope="row">${list["userId"]}</th>
                            <td><a href="/detail?userId=${list["userId"]}">${list["name"]}</td>
                            <td>${list["title"]}</td>
                            <td>${list.date}</td>
                        </tr>`;
        $("#postList").append(tempHtml);
    }
</script>

<body>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">게시글번호</th>
                    <th scope="col">제목</th>
                    <th scope="col">작성자명</th>
                    <th scope="col">작성날짜</th>
                </tr>
            </thead>
            <tbody id="postList">

            </tbody>
        </table>
        <button class="btn btn-primary" type="submit" onclick='window.location.href="/write"'>글쓰기</button>
    </div>
